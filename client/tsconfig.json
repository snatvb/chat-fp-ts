{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "es6",
    "allowJs": true,
    "jsx": "react",
    "outDir": "./dist",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "esModuleInterop": true,
    "paths": {
      "~/*": ["*"],
      "shared/*": ["../../shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [{ "path": "../shared" }]
}
